
<form asp-controller="Companies" asp-action="Index">

    <input type="text" name="SearchString">
    <input type="submit" value="Buscar">
   

</form>

<table>
    <thead>
        <tr>
            <th>COMPANIE </th>
            <th>Logo</th>
            <th>ADDRESS</th>
            <th>ACTIONS</th>
        </tr>
    </thead>

    @foreach(var companie in Model ){

         <tr>
            <td>@companie.Name</td>
            <td><img src="@companie.Logo" alt="" width="60px"></td>
            <td>@companie.Address</td>
            <td>
                <a asp-area="" asp-controller="Companies" asp-action="Details" asp-route-id="@companie.Id"><button>Details</button></a>
                <a asp-area="" asp-controller="Companies" asp-action="Edit" asp-route-id="@companie.Id"><button>Update</button></a>
                <a asp-area="" asp-controller="Companies" asp-action="Delete" asp-route-id="@companie.Id"><button>Delete</button></a>


            </td>
        </tr>

    }

</table>